generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "cockroachdb"
  url      = env("DATABASE_URL")
}

model Account {
  id                       String  @id @default(cuid())
  userId                   String
  type                     String
  provider                 String
  providerAccountId        String
  refresh_token            String?
  access_token             String?
  expires_at               Int?
  token_type               String?
  scope                    String?
  id_token                 String?
  session_state            String?
  refresh_token_expires_in Int?
  user                     User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  accounts      Account[]
  Car           Car[]
  sessions      Session[]
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Car {
  userId       String
  id           String @id @default(uuid())
  make         String
  model        String
  year         Int
  vin          String
  epaClass     String
  cylinders    Int
  fuelType     String
  horsePower   Int
  torque       Int
  driveType    String
  transmission String
  fuelCity     Int
  fuelHighway  Int
  miles        Int
  User         User   @relation(fields: [userId], references: [id])
}

model Services {
  id              String   @id @default(cuid())
  service_details String
  price           Int
  date_created    DateTime @default(now()) @db.Date
  supplier        String
  service_type    String
  odometer        Int?
  car_id          String
  author_id       String?
}
